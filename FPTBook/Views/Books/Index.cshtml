@model IEnumerable<FPTBook.Models.Book>

@{
    ViewData["Title"] = "List of Books";
}
<p>
    <a onclick="showInPopup('@Url.Action("Create","Books",null,Context.Request.Scheme)','New Book')" class="btn btn-success text-white"><i class="fa-solid fa-circle-plus"></i> Create a new book</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Title
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ProfilePictureURL" alt="@item.Title">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body" style="margin-left: 3rem">
                            <p class="card-text"><b>ISBN: </b>@item.ISBN</p>
                            <p class="card-text"><b>Category: </b>@item.Category.Name</p>
                            <p class="card-text"><b>Publisher: </b>@item.Publisher.FullName</p>
                            <p class="card-text"><b>Number of page: </b>@item.page_num</p>
                            <p class="card-text"><b>Published date: </b>@item.publication_date.ToString("dd MMM yy")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer " style="display: flex;">
                            <p class="card-text">
                                <a style="margin-left: 10.5rem" class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white"
                                   asp-controller="Orders"
                                   asp-action="AddItemToShoppingCart"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>